<%= simple_form_for [@flat, invitation], html: { class:'flex items-center justify-between border-solid bg-blue-100 rounded p-4 mb-2' } do |f| %>
  <%= f.input :email %>
  <div class="flex">
    <%= f.submit 'send invitation', class: 'text-white bg-emerald-600 py-1 px-4 rounded' %>
    <%= link_to "cancel", flat_path(@flat), class: "text-white bg-red-800 py-1 px-4 rounded ml-2" %>
  </div>
<% end %>
