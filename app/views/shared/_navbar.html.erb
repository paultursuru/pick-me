<header class="bg-slate-50 shadow">
  <div class="container mx-auto px-5 py-3 flex items-center justify-between">
    <div class="flex items-center">

      <% if user_signed_in? %>
        <%= link_to 'Pick Me ðŸ‘‹', dashboard_path, class:'text-gray-800 text-xl font-bold' %>
      <% else %>
        <%= link_to 'Pick Me ðŸ‘‹', root_path, class:'text-gray-800 text-xl font-bold' %>
      <% end %>
    </div>

    <div class="flex items-center">
      <% if user_signed_in? %>
        <%= link_to 'dashboard', dashboard_path, class:"text-gray-800 text-sm md:text-lg underline" %>
        <% if current_user.avatar.attached? %>
          <%= link_to edit_user_registration_path,
                    class:"reveal-btn reveal-btn-avatar flex items-center shadow-lg p-0" do %>
            <%= cl_image_tag current_user.avatar.key, alt: 'avatar picture', width: 20, height: 20, crop: 'fill', class: "w-5 h-5 rounded-full" %>
            <span class="revealed-text">profile</span>
          <% end %>
        <% else %>
          <%= link_to edit_user_registration_path,
                      class:"reveal-btn reveal-btn-primary" do %>
            <i class="fa-solid fa-user"></i>
            <span class="revealed-text">profile</span>
          <% end %>
        <% end %>
        <%= link_to destroy_user_session_path,
                    data: { turbo_method: :delete },
                    class:"reveal-btn reveal-btn-danger" do %>
          <i class="fa-solid fa-sign-out"></i>
          <span class="revealed-text">sign out</span>
        <% end %>
      <% end %>
    </div>
  </div>
</header>
